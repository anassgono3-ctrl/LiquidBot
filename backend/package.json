{
  "name": "liquidbot-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend service for Aave V3 Base liquidation protection bot (monitoring, protection orchestration, analytics).",
  "license": "MIT",
  "author": "",
  "type": "module",
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky install",
    "migrate": "node scripts/migrate.js",
    "worker": "tsx watch src/worker/index.ts",
    "gen:types": "ts-node scripts/generate-types.ts"
  },
  "dependencies": {
    "@apollo/client": "^3.10.0",
    "bullmq": "^5.0.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "pg": "^8.12.0",
    "prom-client": "^15.1.2",
    "redis": "^4.7.0",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.5",
    "@types/redis": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
